<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Link History</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <!-- Custom CSS -->
    <style>
      /* Custom styles */
      body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
      }
      .container {
        margin-top: 50px;
      }
      .table {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 100%; /* Ensure the table fits the screen */
      }
      .table th,
      .table td {
        border-top: none;
        white-space: nowrap; /* Prevent text wrapping in table cells */
      }
      .table td.long-url {
        max-width: 200px; /* Limit the width of the long URL column */
        overflow: hidden;
        text-overflow: ellipsis; /* Show ellipsis for overflowing text */
      }
      .table td.short-url {
        /* max-width: 320px; /* Limit the width of the short URL column */
        overflow: hidden;
        /* text-overflow: ellipsis; Show ellipsis for overflowing text */
      }
      .table td.created-at {
        max-width: 300px; /* Limit the width of the long URL column */
        overflow: hidden;
        text-overflow: ellipsis; /* Show ellipsis for overflowing text */
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
      <a class="navbar-brand" href="/shorturl/dashboard"
        ><i class="fas fa-cut"></i> Scissors</a
      >
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shorturl/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/shorturl/createurl">Create Short URL</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/shorturl/logout">Logout</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
      <h1 class="my-4">Link History</h1>
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>#</th>
              <th>Original URL</th>
              <th>Short URL</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody>
            <% linkHistory.forEach((link, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td class="long-url"><%= link.originalUrl %></td>
              <td class="short-url"><%= link.shortenedUrl %></td>
              <td class="created-at"><%= link.createdAt %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
